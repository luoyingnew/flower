<view>
  <view class="bc-fff">
    <image src="../../img/colored-line.png" mode="widthFix" class="wp-100" />
  </view>
  <van-cell title="送达日期" value="预计后天送达" />
  <van-cell required title="{{title}}" is-link bindtap="showSheet" />
  <!-- <van-action-sheet show="{{ show }}" actions="{{ actions }}" bind:close="onClose" bind:select="onSelect" /> -->
  <!-- </van-cell> -->
  <van-cell required is-link bindtap="getAddress">
    <view slot="title">
      <view class="van-cell-text">{{ address }}</view>
    </view>
  </van-cell>
  <van-cell required>
    <view slot="title">
      <input type="text" placeholder="留言贺卡，填写即送精美贺卡" />
    </view>
  </van-cell>
  <van-cell title="备注/优惠券/权益卡/发票" is-link />

  <van-action-sheet show="{{ show }}" actions="{{ userInfo }}" bind:close="onClose" description="请确认"
    bind:select="onSelect" />
</view>
<button bindtap="pay">支付</button>
<view>{{preOrderId}}</view>